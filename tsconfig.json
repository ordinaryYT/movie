{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",                    // ðŸ‘ˆ Required for alias
    "paths": {
      "@/*": ["*"]                     // ðŸ‘ˆ THIS tells TypeScript to treat @/ as root
    }
  },
  "include": ["*"]
}
